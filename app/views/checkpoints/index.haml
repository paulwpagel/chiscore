%h1.sub_heading Checkpoints

%p
  = link_to 'Add Checkpoint', new_checkpoint_path

%table{:border => 0, :cellpadding => 0, :cellspacing => 0, :class => "listing"}
  %tr
    %th Location
    %th Point Person
    %th.actions{ :colspan => "3" }
  -@checkpoints.each do |checkpoint|
    %tr{:class => cycle("even", "odd")}
      %td= checkpoint.location
      %td= checkpoint.point_person
      %td.actions= link_to 'Show', checkpoint_path(checkpoint)
      %td.actions= link_to 'Edit', edit_checkpoint_path(checkpoint)
      %td.actions= link_to 'Delete', checkpoint_path(checkpoint), :confirm => 'Are you sure?', :method => :delete
