%h1.sub_heading Prize Categories

%p
  - if current_user.admin?
    = link_to 'Add Prize Category', new_prize_category_path

%table{:border => 0, :cellpadding => 0, :cellspacing => 0, :class => "listing"}
  %tr
    %th Name
    %th.actions{ :colspan => "4" }
  -@prize_categories.each do |prize|
    %tr{:class => cycle("even", "odd")}
      %td= prize.name
      - if !current_user.admin?
        %td.actions= link_to 'Vote!', new_vote_path
      - if current_user.admin?
        %td.actions= link_to 'Show', prize_category_path(prize)
        %td.actions= link_to 'Edit', edit_prize_category_path(prize)
        %td.actions= link_to 'Delete', prize_category_path(prize), :confirm => 'Are you sure?', :method => :delete

